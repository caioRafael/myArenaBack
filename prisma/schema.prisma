// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Arena {
  id            String  @id @default(uuid())
  fantasyName   String
  corporateName String? @unique
  cnpj          String? @unique
  phone         String  @unique
  address       String

  administratorId String @unique
  administrator   User   @relation(fields: [administratorId], references: [id])

  fields Fields[]

  createdAt DateTime @default(now())

  @@map("arena")
}

model User {
  id       String @id @default(uuid())
  name     String
  nickname String
  email    String @unique
  password String

  arena     Arena?
  createdAt DateTime @default(now())

  @@map("user")
}

model Fields {
  id      String   @id @default(uuid())
  name    String
  price   Float
  openIn  DateTime
  closeIn DateTime
  sports  String

  arenaId      String
  arena        Arena          @relation(fields: [arenaId], references: [id])
  ScheduleTime ScheduleTime[]

  @@map("fields")
}

model ScheduleTime {
  id          String   @id @default(uuid())
  date        DateTime
  hour        DateTime
  endHour     DateTime
  amountHours Int
  clientName  String
  clientPhone String
  sport       String

  fieldId String
  field   Fields @relation(fields: [fieldId], references: [id])

  @@map("shcedule_time")
}
